# Environment Variables para Smart Product Grid Pro Wix App

# Servidor
NODE_ENV=production
PORT=3000

# URLs de produção
WIDGET_URL=https://smart-grid-pro-app.herokuapp.com/widget
API_URL=https://smart-grid-pro-app.herokuapp.com/api
DASHBOARD_URL=https://smart-grid-pro-app.herokuapp.com/dashboard

# Wix App Configuration
WIX_APP_ID=smart-product-grid-pro
WIX_APP_SECRET=your-wix-app-secret-here
WIX_APP_INSTANCE_SECRET=your-instance-secret-here

# AI Providers (opcionais)
OPENAI_API_KEY=your-openai-key-here
GOOGLE_AI_KEY=your-google-ai-key-here

# Database (para produção - pode usar MongoDB, PostgreSQL, etc)
DATABASE_URL=mongodb://localhost:27017/smart-grid-pro
REDIS_URL=redis://localhost:6379

# Analytics
ANALYTICS_ENABLED=true
MIXPANEL_TOKEN=your-mixpanel-token-here
GOOGLE_ANALYTICS_ID=your-ga-id-here

# Email/Suporte
SENDGRID_API_KEY=your-sendgrid-key-here
SUPPORT_EMAIL=support@smartgridpro.com

# Stripe para billing (se usar cobrança via Stripe)
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Logs
LOG_LEVEL=info
LOG_FILE=logs/app.log
