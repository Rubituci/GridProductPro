{
  "name": "smart-product-grid-pro-wix-app",
  "version": "1.0.0",
  "description": "Smart Product Grid Pro - Official Wix App for enhanced product grids with AI",
  "main": "server.js",
  "author": "Alex Rubituci",
  "license": "MIT",
  "keywords": ["wix", "app", "ecommerce", "products", "ai", "grid"],
  
  "engines": {
    "node": ">=16.0.0"
  },
  
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:widget",
    "build:widget": "echo 'Widget build complete'",
    "test": "jest",
    "lint": "eslint backend/ widgets/",
    "deploy": "npm run build && echo 'Ready for deployment'",
    "heroku-postbuild": "npm run build"
  },
  
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "compression": "^1.7.4",
    "helmet": "^7.0.0"
  },
  
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0"
  },
  
  "repository": {
    "type": "git",
    "url": "https://github.com/alexrubituci/smart-product-grid-pro"
  },
  
  "homepage": "https://smartgridpro.com",
  
  "wixApp": {
    "appId": "smart-product-grid-pro",
    "version": "1.0.0",
    "name": "Smart Product Grid Pro",
    "description": "Enhanced product grid with AI recommendations",
    "category": "ecommerce",
    "icon": "https://static.wixstatic.com/media/smart-grid-icon.png",
    "permissions": [
      "STORE_CATALOG_READ",
      "STORE_ORDERS_READ",
      "ANALYTICS_READ"
    ]
  }
}
